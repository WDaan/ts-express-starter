{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "esModuleInterop": false,
        "noImplicitAny": false,
        "sourceMap": false,
        "experimentalDecorators": true,
        "pretty": true,
        "moduleResolution": "node",
        "baseUrl": ".",
        "allowSyntheticDefaultImports": true,
        "alwaysStrict": false,
        "outDir": "./dist"
    },
    "include": ["src/**/*"],
    "exclude": ["node_modules"]
}
